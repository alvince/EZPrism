# http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.kt]
max_line_length = 160
wildcard_import_limit = 99

[*.gradle]
max_line_length = 160

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
